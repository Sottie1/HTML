	        <script>

            var ShortLink = document.getElementById("ShortLink");
	                var Alias = document.getElementById("Alias");
			            var output = document.getElementById("output");
				                var Start = document.getElementById("Start");

function ShortTheLink(){

var url = "https://exe.io/api?api=89f51178e7f8f341a977320233ed5ddec7dfca25&url=" + ShortLink.value + "&alias=" + Alias.value;

var xhr = new XMLHttpRequest();
xhr.open("GET", url);

xhr.onreadystatechange = function () {
   if (xhr.readyState === 4) {

output.innerHTML = JSON.parse(xhr.responseText.replaceAll(String.fromCharCode(92),"")).shortenedUrl + "\n \n <p></p><button onclick='Copy()' id='copyBtn'>Copy the Website</button>";

   }else{

       output.innerHTML = "It has occurred an error while shortening the link!"

   }};

xhr.send();
}

function Copy(){

  var r = document.createRange();
  r.selectNode(document.getElementById("output"));
  window.getSelection().removeAllRanges();
  window.getSelection().addRange(r);
  document.execCommand('copy');
  window.getSelection().removeAllRanges();
  alert("Copied!");

}


        </script>
