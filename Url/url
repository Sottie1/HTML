    <!-- Start of banner code -->
    <a href="https://exe.io/ref/Anonymouslol"><img src="https://exe.io/img/ref/r2.gif" title="CuT URLs - Earn money by shortening links with the highest CPMs Ever!" /></a><p></p><p></p>
    <!-- End of banner code -->

    <form action="javascript:ShortTheLink()">
        <input id="ShortLink" placeholder="Put here the long link!" class="inp" type="url" required><p></p><br>
	    <input id="Alias" placeholder="Put here a alias (opcional)" class="inp" type="text"><p></p><br>

    <input type="submit" value="Shorten it!" id="Start"><br><br><br>
        <h2>The url shortened is: </h2>
	    <h1><div id="output"></div></h1><p></p><p></p>


    </form>
